---
import QForm from '../../layouts/Question-form.astro';
import Movie from '../../components/Movie.astro';
import Submit from '../../components/Submit.astro';
import BoolMultiple from '../../components/BoolMultiple.astro';
import RecipesGeneration from '../../components/RecipesGeneration.astro';
import Likard from '../../components/Likard.astro';

import Loading from '../../components/Loading.astro';
---
<QForm title='Generation'>
    <RecipesGeneration title='' body='These are your recommendations! Please have a look and move on.'></RecipesGeneration>
    <Likard
    questionId="1"
    body="The items recommended to me match my interests">
    </Likard>

    <Likard
    questionId="2"
    body="The recommender helped me find the ideal item.">
    </Likard>

    <Likard
    questionId="3"
    body="I think I would enjoy watching the chosen movie.">
    </Likard>

    <Likard
    questionId="4"
    body="I could pick more than one movie from the recommended list.">
    </Likard>


    <Likard
    questionId="5"
    body="I did not find any of the recommended movies interesting to me.">
    </Likard>
    
    <Likard
    questionId="6"
    body="Overall, I am satisfied with the recommender.">
    </Likard>

    <Likard
    questionId="7"
    body="The recommender can be trusted.">
    </Likard>

    <Likard
    questionId="8"
    body="I would use this recommender again. ">
    </Likard>
    
    <Likard
    questionId="9"
    body="The recommendations contained highly popular movies.">
    </Likard>

    <Submit redirect="/" final={true}></Submit>
</QForm>