---
import Fivestar from './Fivestar.astro';
export interface Props {
    title: string,
    id: string,
}
const {id} = Astro.props;
---
<div class="recipe_holder" id={`recipe_holder_${id}`} data-id="1">
    <div class="recipe_information">
        <h5 id='title'>Title</h5>
    </div>
    <div class="recipe_left">
        <!-- <img src="https://via.placeholder.com/500x400/eee?text=1:1" alt=""> -->
        <div class="img_cont"><img id='recipe_image'src="https://via.placeholder.com/500x400/eee?text=1:1" alt=""></div>
        <Fivestar id={`recipe_${id}_form`}></Fivestar>
    </div>
    

</div>

<style>
       .recipe_holder {
        display: flex;
        flex-direction: column;
        box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.1);
        border: 1px;
        border-style: solid;
        border-color: rgba(0, 0, 0, 0.2);
        border-radius: 1rem;
        min-width: 240px;
        max-width: 19%;
        min-height: 200px;
        max-height: 600px;
        height: auto;

        margin: 0 .1rem 1rem 0;
        align-items: center;
    }
    .recipe_holder > .recipe_left > .img_cont {
        height: auto;
        width: 91%;
        display: flex;
        border: 1px;
        border-style: solid;
        border-color: rgba(0, 0, 0, 0.2);
        border-radius: 1rem;
        overflow: hidden;

    }
    .recipe_holder > .recipe_left > .img_cont > img {
        height: 100%;
        width: 100%;
        object-fit: fill;
    }

    .recipe_left {
        display: flex;
        align-items: center;
        flex-direction: column;
        margin: .1rem .1rem .1rem .1rem;
    }
    .recipe_information {
        height: 76px;

    }
    .recipe_information > p {

    }

    .recipe_information > h5 {
        font-size: 23px;
        margin: 1rem 1rem 1rem 1rem;
    }
</style>