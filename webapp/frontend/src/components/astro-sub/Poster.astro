---
import secrets from '../../../secrets.json'
export interface Props {
    tmdbId: string;
}
const {tmdbId, imgwidth} = Astro.props;
const response = await fetch(`https://api.themoviedb.org/3/movie/${tmdbId}?api_key=${secrets.TMDB_APIKEY}`)
const movie = await response.json();
const src = `https://image.tmdb.org/t/p/w200/${movie.poster_path}`
---

<img src={src} />



<style>
    img {
        width: 100%;
        object-fit: contain;
    }
</style>