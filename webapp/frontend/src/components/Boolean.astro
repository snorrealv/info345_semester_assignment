---
export interface Props {
    title?: string,
    body: string,
    href?: string,
	questionId: string,
}
const {href, title = '', body, questionId} = Astro.props;

---


<li class="likard">
	<div class="likard-cont">
		<a href={href}>
			<h2>
				Q{questionId}.
			</h2>
			<p>
				{body}
				<slot/>
			</p>
		</a>
		<div>
		<form class="radioBoolForm" id={questionId}>
            <label class='labelclass' for='true'>
				<input type='radio' name={questionId} value='true'>
				A
			</label>

			<label class='labelclass' for='false'>
				<input type='radio' name={questionId} value='false'>
				B
			</label>
		</form>
		</div>
	</div>
</li>


<style>

	.labelclass {
		transform: scale(1.5); 
		font-size: 20px;
		margin: 0 2rem 0 0;
	}


	input[type='radio'] { 
     transform: scale(1.5); 
 	}

	.likard {
		margin-bottom: 1rem;
		list-style: none;
		display: flex;
		flex-direction: column;
		padding: 0.15rem;
		background-image: var(--link-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.likard-cont {
		width: 93%;
		padding: 1em 1.3em;
		border-radius: 0.35rem;
		opacity: 0.8;
		background-color: white;
	}

	.likard > .likard-cont > .forms {
		display: flex;
		justify-content: center;
		padding-top: 1rem;
		padding-right: 1rem;
		}

	.likard > .likard-cont > div > form > span {
		padding-left: 4rem;
		display: inline-block;
	}
	
	.likard > .likard-cont > div > form > span > input {		
		border: 0px;
    	height: 1rem;
		width: 100%;
	}

	.likard > .likard-cont > form > span > label{
		padding-left: 1rem;
	}

	
	.likard > .likard-cont > a{		
		text-decoration: none;
		line-height: 1.4;
		color: var(--text-color);		
	}

	h2 {
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		display: inline-block;
		
	}
    
    p {
        margin-top: 0.75rem;
        margin-bottom: 0;
    }


	.likard:is(:hover, :focus-within) {
		background-position: 0;
	}

	.likard:is(:hover, :focus-within) h2 {
		color: #221f20;
		transform: translateX(2px);
	}
</style>
